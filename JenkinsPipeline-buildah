pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        metadata:
          name: buildah
        spec:
          containers:
          - name: buildah
            image: quay.io/buildah/stable:v1.23.1
            command:
            - cat
            tty: true
            securityContext:
              privileged: true
            volumeMounts:
              - name: varlibcontainers
                mountPath: /var/lib/containers
          volumes:
            - name: varlibcontainers
      '''   
    }
  }
  options {
    buildDiscarder(logRotator(numToKeepStr: '3'))
    durabilityHint('PERFORMANCE_OPTIMIZED')
    disableConcurrentBuilds()
  }
  environment {
    DH_CREDS=credentials('dh-creds')
  }
  stages {
    stage('Build with Buildah') {
      steps {
        container('buildah') {
          sh 'buildah build -t focus617xu/jenkins-example-buildah:1.0-220828 .'
        }
      }
    }
    stage('Login to Docker Hub') {
      steps {
        container('buildah') {
          sh 'echo $DH_CREDS_PSW | buildah login -u $DH_CREDS_USR --password-stdin docker.io'
        }
      }
    }
    stage('tag image') {
      steps {
        container('buildah') {
          sh 'buildah tag focus617xu/jenkins-example-buildah:1.0-220828 focus617xu/jenkins-example-buildah:latest'
        }
      }
    }
    stage('push image') {
      steps {
        container('buildah') {
          sh 'buildah push focus617xu/jenkins-example-buildah:1.0-220828'
          sh 'buildah push focus617xu/jenkins-example-buildah:latest'
        }
      }
    }
  }
  post {
    always {
      container('buildah') {
        sh 'buildah logout docker.io'
      }
    }
  }
}
